{
  "name": "@edro/web-aluno",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "pnpm run --filter @edro/theme --if-present build && pnpm run --filter @edro/shared build && pnpm run --filter @edro/ui build",
    "tailwind:build": "tailwindcss -c tailwind.config.js -i ./app/globals.css -o ./app/styles.css",
    "tailwind:watch": "tailwindcss -c tailwind.config.js -i ./app/globals.css -o ./app/styles.css --watch",
    "dev": "next dev -p 3001",
    "build": "pnpm tailwind:build && next build",
    "start": "next start -p ${PORT:-3333}",
    "lint": "next lint"
  },
  "dependencies": {
    "@heroui/react": "^2.8.5",
    "@heroui/theme": "^2.4.23",
    "@edro/shared": "workspace:*",
    "@edro/theme": "workspace:*",
    "@edro/ui": "workspace:*",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tanstack/react-query": "^5.0.0",
    "zustand": "^4.4.0",
    "axios": "^1.6.0",
    "date-fns": "^2.30.0",
    "recharts": "^2.10.0",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^4.0.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "@sentry/nextjs": "^7.114.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0"
  }
}
